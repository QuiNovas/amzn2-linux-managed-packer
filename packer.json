{
  "variables": {
    "ami_name": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "local_ip": ""
  },
  "builders": [
    {
      "access_key": "{{user `aws_access_key`}}",
      "ami_groups": [
        "all"
      ],
      "ami_name": "{{user `ami_name`}}-{{isotime \"20060102150405\"}}",
      "ami_regions": [
        "us-east-1"
      ],
      "instance_type": "c4.xlarge",
      "region": "us-east-1",
      "secret_key": "{{user `aws_secret_key`}}",
      "snapshot_groups": [
        "all"
      ],
      "source_ami_filter": {
        "filters": {
          "name": "amzn2-ami-minimal-hvm-selinux-*"
        },
        "most_recent": true,
        "owners": [
          "self"
        ]
      },
      "ssh_file_transfer_method": "sftp",
      "ssh_pty": true,
      "ssh_username": "ec2-user",
      "temporary_security_group_source_cidrs": "{{user `local_ip`}}/32",
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./files",
      "destination": "/tmp"
    },
    {
      "scripts": [
        "scripts/yum.sh",
        "scripts/awsinspector.sh",
        "scripts/awsssm.sh",
        "scripts/cloudwatch.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }

  ]
}
